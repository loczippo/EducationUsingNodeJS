<div class="container">
    <h1>Đăng ký tài khoản</h1>
    {{#if status}}
    <div class="alert alert-danger" role="alert">
        <h4>{{status}}</h4>
    </div>
    {{/if}}
    <form method="POST">
        <div class="form-group">
            <label for="username">Tên tài khoản</label>
            <input type="text" class="form-control" id="username" name="username" value={{value.username}}>
        </div>
        <div class="form-group">
            <label for="password">Mật khẩu</label>
            <input type="password" class="form-control" id="password" name="password" value={{value.password}}>
        </div>
        <div class="form-group">
            <label for="re-password">Nhập lại mật khẩu</label>
            <input type="password" class="form-control" id="repassword" name="repassword" value={{value.repassword}}>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="text" class="form-control" id="email" name="email" value={{value.email}}>
        </div>
        <div class="form-group">
            <label for="numberphone">Số điện thoại</label>
            <input type="text" class="form-control" id="numberphone" name="numberphone" value={{value.numberphone}}>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="privacypolicy" name="privacypolicy">
            <label class="form-check-label" for="privacypolicy">Bằng việc đăng ký, bạn chấp nhận các điều khoản học
                tập tại trang web của chúng tôi</label>
        </div>
        <button type="submit" class="btn btn-danger">Đăng ký luôn</button>
    </form>
</div>