<div class="container" style="margin-top: 120px;">
    <h1>Đăng nhập</h1>
    {{#if status}}
    <div class="alert alert-danger" role="alert">
      <h4>{{status}}</h4>
    </div>
    {{/if}}
    <form method="POST" action="/auth/login/execute">
        <div class="form-group">
            <label for="username">Tên tài khoản</label>
            <input type="text" class="form-control" id="username" name="username" placeholder="Enter Username" value={{value.username}}>
        </div>
        <div class="form-group">
            <label for="password">Mật khẩu</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Enter Password" value={{value.password}}>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="memorize" name="memorize">
            <label class="form-check-label" for="memorize">Ghi nhớ?</label>
        </div>
        <button type="submit" class="btn btn-danger">Đăng nhập</button>
    </form>
</div>