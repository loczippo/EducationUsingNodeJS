<div class="container">
    <div class="mt-4">
        <h1>Đăng bài học</h1>

        <form method="POST" action="/learning/store">
            <div class="form-group">
                <label for="name">Tên bài học</label>
                <input type="text" class="form-control" id="name" name="name">
            </div>
            <div class="form-group">
                <label for="videoId">Video ID</label>
                <input type="text" class="form-control" id="videoId" name="videoId">
            </div>
            <div class="form-group">
                <label for="tag">Tag</label>
                <select class="form-control" id="tag" name="tag">
                    {{#each tag}}
                    <option>{{this.tag}}</option>
                    {{/each}}
                </select>
            </div>

            <button type="submit" class="btn btn-danger">Thêm bài học</button>
        </form>
    </div>
</div>