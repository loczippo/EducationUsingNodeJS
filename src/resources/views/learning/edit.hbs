<div class="container">
    <div class="mt-4">
        <h1>Cập nhật bài học</h1>

        <form class="mt-4" method="POST" action="/learning/{{lesson._id}}?_method=PUT">
            <div class="form-group">
                <label for="name">Tên bài học</label>
                <input type="text" class="form-control" value="{{lesson.name}}" id="name" name="name">
            </div>
            <div class="form-group">
                <label for="videoId">Video ID</label>
                <input type="text" class="form-control" value="{{lesson.videoId}}" id="videoId" name="videoId">
            </div>
            <div class="form-group">
                <label for="tag">Tag</label>
                <select class="form-control" id="tag" name="tag">
                    {{#each tag}}
                    <option>{{this.tag}}</option>
                    {{/each}}
                </select>
            </div>

            <button type="submit" class="btn btn-danger">Lưu lại</button>
        </form>
    </div>
</div>